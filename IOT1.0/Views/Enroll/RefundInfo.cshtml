@{
    ViewBag.Title = "退款详情";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins" id="refund">
                <div class="ibox-title">
                    <h5>退款详情清单（单位：元）</h5>
                </div>
                <div class="ibox-content">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">学员姓名：</label>
                            <div class="col-sm-3">
                                <input type="text" placeholder="学员姓名" class="form-control" id="applyname" disabled="disabled">
                            </div>
                            <label class="col-sm-2 control-label">出生日期：</label>
                            <div class="col-sm-3">
                                <input type="text" placeholder="出生日期" class="form-control" disabled="disabled">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">报名日期：</label>
                            <div class="col-sm-3">
                                <input type="text" placeholder="报名日期" class="form-control" disabled="disabled">
                            </div>
                            <label class="col-sm-2 control-label">报名金额：</label>
                            <div class="col-sm-3">
                                <input type="text" placeholder="报名金额" class="form-control" disabled="disabled">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">课程内容：</label>
                            <div class="col-sm-3">
                                <input type="text" placeholder="课程内容" class="form-control" disabled="disabled">
                            </div>
                            <label class="col-sm-2 control-label">备注：</label>
                            <div class="col-sm-3">
                                <input type="text" placeholder="备注" class="form-control" disabled="disabled">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">优惠情况：</label>
                            <div class="col-sm-3">
                                <input type="text" placeholder="优惠情况" class="form-control">
                            </div>
                            <label class="col-sm-2 control-label">优惠合计：</label>
                            <div class="col-sm-3">
                                <input type="text" placeholder="优惠合计" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">已学课时：</label>
                            <div class="col-sm-3">
                                <input type="text" placeholder="已学课时" class="form-control">
                            </div>
                            <label class="col-sm-2 control-label">课时合计：</label>
                            <div class="col-sm-3">
                                <input type="text" placeholder="课时合计" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">发票税：</label>
                            <div class="col-sm-3">
                                <input type="text" placeholder="发票税" class="form-control">
                            </div>
                            <label class="col-sm-2 control-label">合计：</label>
                            <div class="col-sm-3">
                                <input type="text" placeholder="发票税合计" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">pos机：</label>
                            <div class="col-sm-3">
                                <input type="text" placeholder="pos机" class="form-control">
                            </div>
                            <label class="col-sm-2 control-label">合计：</label>
                            <div class="col-sm-3">
                                <input type="text" placeholder="pos机合计" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">违约金比例：</label>
                            <div class="col-sm-3">
                                <input type="text" placeholder="请输入1-100比例" class="form-control">
                            </div>
                            <label class="col-sm-2 control-label">退款方式：</label>
                            <div class="col-sm-3">
                                <input type="text" placeholder="退款方式" class="form-control">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>