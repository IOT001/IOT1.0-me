@section scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('body').removeClass('gray-bg');
            var gxbM = $(".gxb span");
            for (var j = 0; j < gxbM.length; j++) {
                !(gxbM.eq(j).html()) && (gxbM.eq(j).html("&nbsp;/&nbsp;"));
            }
            var year = $(".year");
            for (var i = 0; i < year.length; i++) {
                !(year.eq(i).html()) && (year.eq(i).html("&nbsp;&nbsp;&nbsp;&nbsp;"));
            }
            var gonqi = $(".month");
            for (var i = 0; i < gonqi.length; i++) {
                !(gonqi.eq(i).html()) && (gonqi.eq(i).html("&nbsp;&nbsp;"));
            }
        })
        function signname() {
            layer.open({
                type: 2,
                title: "<h3 class='ibox-title'>在线签名</h3>",
                area: ['800px', '500px'],
                shade: [0],
                content: ['@Url.Action("Sign", "Common")'], //iframe的url，no代表不显示滚动条
                btn: ['确定', '取消'],
                yes: function (index) {
                    layer.close(index);
                },
                cancel: function (index) {
                    layer.close(index);
                }
            });
        }
    
    </script>
