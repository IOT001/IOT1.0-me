@using DataProvider.Models
@using DataProvider.Paging
@{
    ViewBag.Title = "用户进度";
    Layout = "~/Views/Shared/_Layoutwx.cshtml";//设置模板文件
}
@model WX_UserProgressListModel




<div class="wrapper wrapper-content animated fadeInRight w640">
    <div class="ibox">
        <div class="ibox-title">

            <h2>
                <a href="@Url.Action("Index")" class="pull-left m-r-md">
                    <i class="fa fa-chevron-left"></i>
                </a>我的课程进度
            </h2>
        </div>
        @if (Model != null && Model.UserProgressList.Count() > 0)
        {
            foreach (var m in Model.UserProgressList)
            {
                <div class="ibox-title">

                    @if (@m.Progress_Bar >= 100)
                    {
                        <span class="label label-default pull-right">已结束</span>
                    }
                    else
                    {
                        <span class="label label-primary pull-right">进行中</span>
                    }

                    <h3>@m.CourseName</h3>
                </div>
                <div class="ibox-content">
                    <div class="team-members">

                    </div>
                    <h4>课程简介</h4>
                    <p>
                        @m.Introduce
                    </p>
                    <div>
                        <span>当前课程进度：</span>
                        <div class="stat-percent">@m.Progress_Bar%</div>
                        <div class="progress progress-mini">
                            <div style="width: @m.Progress_Bar%;" class="progress-bar"></div>
                        </div>
                    </div>
                    <div class="row  m-t-sm">
                        <div class="col-sm-12">
                            <span class="font-bold ">班级：</span>
                            @m.ClassName
                        </div>
                        <div class="col-sm-12">
                            <span class="font-bold ">总课时：</span>
                            @m.ClassHour
                        </div>
                        <div class="col-sm-12">
                            <span class="font-bold ">已用课时：</span>
                            @m.UsedHour
                             <a href="@Url.Action("ClasshourDetailedlist", "Weixin", new { StudentID=@m.StudentID ,ClassID = @m.ClassID})" class="confirm">明细</a> 
                        </div>
                      
                    </div>
                </div>

            }
        }
    </div>
</div>