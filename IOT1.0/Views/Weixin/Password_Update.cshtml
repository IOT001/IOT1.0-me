            <div class="form-group">
                <label class="col-xs-3 control-label">重新输入新密码：</label>
                <div class="col-xs-8">
                    <input type="text" placeholder="重新输入新密码" class="form-control"    id="ACC_Password_2"> 
                
                 <button type="button"  class=" btn btn-primary" onclick="SAVA()">&nbsp&nbsp保&nbsp&nbsp存&nbsp&nbsp</button>

                </div>
            </div>
 
  
        </form>

