@using DataProvider.Models
@using DataProvider.Paging
@{
    ViewBag.Title = "报名审核列表";
    Layout = "~/Views/Shared/_Layoutwx.cshtml";//设置模板文件
}
@model EnrollAuditListViewModel

<div class="ibox float-e-margins w640">
    <div class="ibox-title">

        <h2>
            <a href="@Url.Action("Index")" class="pull-left m-r-md">
                <i class="fa fa-chevron-left"></i>
            </a>报表审核列表
        </h2>
    </div>
    <div class="ibox-title">

          @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmQuery", @class = "form-horizontal" }))
        {
             
    
            
    <div class="">
        <div class="btn-group">
            <button class="btn btn-primary" type="submit" id="This_Week" onclick="This_Week">查&nbsp;&nbsp;&nbsp;&nbsp;询</button> 
        </div>
    </div>
            
        }


    </div>


    <div id="mydiv"></div>
    <div class="ibox-content">
        <table class="table">
            <thead>
                <tr>
                    <th>资源号</th>
                    <th>日期</th>
                    <th>学员</th>
                    <th>状态</th>
                    <th>操作</th>
                </tr>
            </thead>

            <tbody>
                @if (Model != null && Model.EnrollAuditList.Count() > 0)
                {
                    foreach (var m in Model.EnrollAuditList)
                    {
                        <tr>
                            <td>@m.ID</td>
                            <td>@DateTime.Parse(@m.CreateTime + "").ToString("yyyy-MM-dd")</td>
                            <td>@m.ApName</td>
                            <td>@m.StateName</td> 
                            
                            @if (@m.EnrollAudit_count > 0)
                            {
                                <td><a href="@Url.Action("EnrollAuditInfo", "Weixin", new { APID = @m.ID })" class=" btn-block"><input type="button" value="审核" class="btn btn-primary btn-xs"  /></a></td>
                            }
                            
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" style="text-align:center; color:red;">未查询到数据,请更换查询条件试试!</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


