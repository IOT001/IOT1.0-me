<script type="text/javascript">

    //判断页面是否有回车操作
    window.document.onkeydown = function (e) {
        e = e || window.event;
        if (e.keyCode == 13 || e.keyCode == 108) {
            document.getElementById('frmQuery').submit();
        }
    }
    //点击列表的编辑按钮，编辑操作
    function modify(id) {
        cleanData("buttoninfo");
        layer.open({
            type: 1,
            title: "<h5 class='ibox-title'>编辑</h3>",
            area: ['680px', '490px'],
            content: $('#buttoninfo'),
            btn: ['保存', '取消'],
            yes: function () {
                save(id);
            },
            cancel: function (index) {
                layer.close(index);
            }
        });

        if (id) {//提供存着ID就是修改，则加载数据，不然打开空页面
            var loadindex = layer.load();
            loaddetail(id, loadindex)
        }

        //激活日期控件
        $('.DateS').datepicker({
            keyboardNavigation: false,
            forceParse: false,
            autoclose: true
        });
        //激活日期
        $(".chosen-select").chosen({
            no_results_text: "未找到此选项!",
            search_contains: true
        });
    
    }



    //排课弹窗
    function generate(id) {
        cleanData("generate");
        layer.open({
            type: 1,
            title: "<h5 class='ibox-title'>排课</h3>",
            area: ['800px', '500px'],
            content: $('#generate'),
            btn: ['保存', '取消'],
            yes: function () {
                save(id);
            },
            cancel: function (index) {
                layer.close(index);
            }
        });

        if (id) {//提供存着ID就是修改，则加载数据，不然打开空页面
            var loadindex = layer.load();
            loaddetail(id, loadindex)
        }
    }

    //加时段弹窗
    function addTime(id) {
        cleanData("addtime");//清空数据
        layer.open({
            type: 1,
            title: "<h5 class='ibox-title'>添加时段</h3>",
            area: ['400px', '200px'],
            content: $('#addtime'),
            btn: ['保存', '取消'],
            yes: function () {
                save(id);
            },
            cancel: function (index) {
                layer.close(index);
            }
        });

        //激活时钟控件
        $('.clockpicker').clockpicker();
    }

    //分配学员，也就是转班弹出功能
    function adjust(id) {
        cleanData("adjust");//清空数据
        layer.open({
            type: 1,
            title: "<h3 class='ibox-title'>分配学员</h3>",
            area: ['600px', '400px'],
            content: $('#adjust'),
            btn: ['保存', '取消'],
            yes: function () {
                save(id);
            },
            cancel: function (index) {
                layer.close(index);
            }
        });
    }
    //分配中的转班弹出层
    function transfer(id) {
        cleanData("transfer");//清空数据
        layer.open({
            type: 1,
            title: "<h3 class='ibox-title'>分配学员</h3>",
            area: ['800px', '500px'],
            content: $('#transfer'),
            btn: ['取消'],
            cancel: function (index) {
                layer.close(index);
            }
        });
    }
    function loaddetail(id, loadindex) {
        $.ajax({
            url: '@Url.Action("GetButtonByID", "Admin")',
            type: "post",
            data: { id: id },
            success: function (json) {
                if (json.status = 200) {//成功
                    $("#BTN_Name").val(json.data.BTN_Name);
                    $("#BTN_Name_En").val(json.data.BTN_Name_En);
                    $("#BTN_Desc").val(json.data.BTN_Desc);
                    $("#BTN_OrderIndex").val(json.data.BTN_OrderIndex);
                    $("#BTN_Mark").val(json.data.BTN_Mark);

                    if (json.data.BTN_IsSuspended)//如果停用true
                    {
                        $("#BTN_IsSuspended").iCheck('check');//设置选中，具体可以百度icheck插件
                    }

                    layer.close(loadindex);//关闭加载层
                }
            },
            error: function (xmLHttpRequest, textStatus, errorThrown) {
                layer.msg("系统异常，请重试<br/>错误信息：" + xmLHttpRequest.responseText);
            }
        });
    }

    //保存或者新增
    function save(id) {
        var obj = new Object;
        if (id) {//有ID就是修改模式，没有就是新增模式
            obj.BTN_Id = id;
        }
        obj.BTN_Name = $("#BTN_Name").val().trim();
        if (!obj.BTN_Name) {
            layer.msg("请输入按钮名称！");
            return false;
        }
        obj.BTN_Name_En = $("#BTN_Name_En").val().trim();//赋值必须和数据库字段对应
        obj.BTN_Desc = $("#BTN_Desc").val().trim();
        obj.BTN_OrderIndex = $("#BTN_OrderIndex").val().trim();
        obj.BTN_Mark = $("#BTN_Mark").val().trim();
        if ($("#BTN_IsSuspended").is(':checked')) {//判断停用按钮是否选中
            obj.BTN_IsSuspended = true;
        }
        else { obj.BTN_IsSuspended = false; }
        var action = '';
        if (id) {//有ID就是修改模式，没有就是新增模式
            action = '@Url.Action("SaveButton", "Admin")';
        }
        else { action = '@Url.Action("AddButton", "Admin")' }
        $.post(action, {
            "data": JSON.stringify(obj)//序列化对象
        }, function (json) {
            if (json.status = 200) {//成功

                layer.msg(json.msg);//弹出服务器返回的消息
                setTimeout(function () {//操作
                    layer.closeAll();//关闭所有层
                    window.location.reload(); //刷新
                }, 3000);
            }
        }, 'json');
    }

    function exportForm() {
        var $frm = $('#exportform');
        var array = $('#frmQuery').serializeArray();

        for (i = 0, length = array.length; i < length; i++) {
            key = array[i].name;
            value = array[i].value;
            $frm.append($('<input name = "' + key + '" value = "' + value + '"  style="display:none"/>'));
        }

        $frm.submit();
    }
</script>
