@using DataProvider.Models
@using DataProvider.Paging
@{
    ViewBag.Title = "退款审核";
}
@model RefundCheckListModel
@section styles{
    <style type="text/css">


    </style>
}
<div class="wrapper wrapper-content  animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins">
                <!-- 数据显示区 -->
                <div class="ibox-content">
                    <!-- 功能操作区 -->
                    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmQuery", @class = "form-horizontal form-horizontal" }))
                    {
                        <div class="form-group">
                            <div class="col-sm-2">
                                <label class="control-label">学生姓名：</label>
                            </div>

                            <div class="col-sm-4">
                                @Html.TextBoxFor(t => t.search.SutdentName, new { @class = "form-control input-sm", @type = "text", @placeholder = "请输入学生姓名", @id = "Name" })
                            </div>
                            <label class="col-sm-2 control-label">联系电话：</label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(t => t.search.BindPhone, new { @class = "form-control input-sm", @type = "text", @placeholder = "请输入联系电话", @id = "BindPhone" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-2">
                                <label class="control-label">申请日期:</label>
                            </div>

                            <div class="col-sm-4">
                                <div class="input-daterange input-group" id="datepicker">
                                    @Html.TextBoxFor(t => t.search.timeStart, new { @class = "input-sm form-control", @type = "text", @id = "timeStart", @value = DateTime.Now })

                                    <span class="input-group-addon">到</span>

                                    @Html.TextBoxFor(t => t.search.timeEnd, new { @class = "input-sm form-control", @type = "text", @id = "timeEnd", @value = DateTime.Now })

                                </div>
                            </div>
                        </div>




                        <div class="form-group">

                            <div class="col-sm-12 project-actions">
                                <button type="submit" class="btn btn-w-m btn-primary btn-sm">查&nbsp;&nbsp;&nbsp;&nbsp;询</button>
                             @*   <button type="button" id="Export" onclick="ExportToExcel()" class="btn btn-w-m btn-primary btn-sm">导&nbsp;&nbsp;&nbsp;&nbsp;出</button>*@
                            </div>
                        </div>
                    }
                    <!-- 数据列表 -->
                    <table class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th>申请日期</th>
                                <th>学员姓名</th>
                                <th>学员电话</th>
                                <th>报名班级</th>
                                <th>申请状态</th>
                                <th>报名费用</th>
                                <th>申请退额</th>
                                <th>退款备注</th>
                                <th>财务支付</th>
                                   <th>收款单据号</th>
                                   <th>开户行</th>
                                   <th>账号</th>
                                
                                <th>操作</th>
                            </tr>
                        </thead>
                        <!-- 循环数据 -->
                        <tbody>

                            @if (Model != null && Model.RefundlList.Count() > 0)
                            {
                                foreach (var m in Model.RefundlList)
                                {
                                    <tr>

                                        <td class="jz">@m.CreateTime</td>
                                        <td>@m.SutdentName</td>
                                        <td>@m.BindPhone</td>
                                        <td>@m.ClassName</td>
                                        <td>@m.StateName</td>
                                        <td>@m.Paid</td>
                                        <td>@m.ApplyPrice</td>
                                        <td>@m.ApplyRemark</td>
                                        <td>@m.CheckPrice</td>
                                         <td>@m.ReceiptNum</td>
                                         <td>@m.DepositBank</td>
                                         <td>@m.AccountNumber</td>
                                        @if (string.IsNullOrEmpty(m.AuditingID))//如果没审核
                                        { 
                                             <td><a href="javascript:apply('@Newtonsoft.Json.JsonConvert.SerializeObject(m)')" class="btn btn-primary btn-xs" type="button"><i class="fa fa-edit"></i>审核</a></td>
                                        }
                                       else
                                       {
                                             <td>--</td>
                                        }

                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="10" style="text-align: center; color: red;">未查询到数据,请更换查询条件试试!</td>
                                </tr>
                            }
                        </tbody>

                    </table>
                    @if (Model != null && Model.RefundlList.TotalPageCount > 0)
                    {
                        <div class="row">
                            <div class="dataTables_info col-sm-6">每页显示 @Model.search.PageSize 条，共<span>@Model.RefundlList.TotalItemCount</span>条数据</div>
                            <div class="col-sm-6">

                                @Html.Pager(Model.RefundlList, new PagerOptions(), "", new RouteValueDictionary {
                                   { "pageindex",  Model.search.CurrentPage },
                                   { "pagesize", ViewBag.PageSize }
                               }, null)
                            </div>

                        </div>
                    }
                </div>
            </div>
        </div>

    </div>
</div>





  @*弹出层，申请退款*@
                        <div class="ibox float-e-margins" id="refund" style="display:none">
                            <div class="ibox-content">
                                <form class="form-horizontal">
                                    <div class="form-group">
                                        <label class="col-sm-3 control-label">学员姓名：</label>
                                        <div class="col-sm-8">
                                            <input type="text" placeholder="学员姓名" class="form-control" id="applyname" disabled="disabled">
                                        </div>
                                    </div>
                                    
                                         <div class="form-group">
                                        <label class="col-sm-3 control-label">收款单据号：</label>
                                        <div class="col-sm-8">
                                            <input type="text" placeholder="收款单据号" class="form-control" id="ReceiptNum" disabled="disabled">
                                        </div>
                                    </div>

                                         <div class="form-group">
                                        <label class="col-sm-3 control-label">开户行：</label>
                                        <div class="col-sm-8">
                                            <input type="text" placeholder="开户行" class="form-control" id="DepositBank" disabled="disabled">
                                        </div>
                                    </div>

                                         <div class="form-group">
                                        <label class="col-sm-3 control-label">账号：</label>
                                        <div class="col-sm-8">
                                            <input type="text" placeholder="账号" class="form-control" id="AccountNumber" disabled="disabled">
                                        </div>
                                    </div>
                                    
                                     
                                    <div class="form-group">
                                        <label class="col-sm-3 control-label">申请退款金额：</label>
                                        <div class="col-sm-8">
                                            <input type="text" placeholder="申请退款金额" class="form-control" id="ApplyPrice" disabled="disabled">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-3 control-label">申请理由：</label>
                                        <div class="col-sm-8">
                                            <textarea placeholder="申请理由" class="form-control" id="ApplyRemark" disabled="disabled"></textarea>
                                        </div>
                                    </div>

                                    
            <div class="form-group  ">
                <label class="col-xs-3 control-label">审核是否通过：</label>

                <div class="col-xs-4">
                    <div class="radio i-checks" >
                        <label class="">
                        <input type="radio"  id="apply1"  checked="checked"  value="2"   name="radio-choice-h-2"  style="position: absolute; opacity: 0;"  > 审核通过
                        </label>
 
                    
 
                    </div>
                </div>
 
                <div class="col-xs-4">
                       
                      <div class="radio i-checks">
                       <label class="">
 <input type="radio"  id="apply2"   name="radio-choice-h-2"  value="3" style="position: absolute;" > 审核不通过
 
 
                        </label>
                </div>
                </div>
            </div>

                         <div class="form-group" id="CheckPrice_hidden">
                                        <label class="col-sm-3 control-label">审核金额：</label>
                                        <div class="col-sm-8">
                                            <input type="text" placeholder="审核金额" class="form-control" id="CheckPrice">
                                        </div>
                        </div>

                                         <div class="form-group" id="AuditingRemark_hidden" >
                                        <label class="col-sm-3 control-label">审核备注：</label>
                                        <div class="col-sm-8">
                                            <textarea placeholder="审核备注" class="form-control" id="AuditingRemark" ></textarea>
                                        </div>
                                    </div>


 

                                    
                                </form>
                            </div>
                        </div>
                        <script type="text/javascript">
                            //点击申请退款按钮
                            function apply(data) {
                                cleanData("refund");
                                var obj = JSON.parse(data);
                               
                                $("#applyname").val(obj.SutdentName);
                                $("#ApplyPrice").val(obj.ApplyPrice);
                                $("#ApplyRemark").val(obj.ApplyRemark);
                                $("#CheckPrice").val(obj.ApplyPrice);
                                $("#ReceiptNum").val(obj.ReceiptNum);
                                $("#DepositBank").val(obj.DepositBank);
                                $("#AccountNumber").val(obj.AccountNumber);
                                layer.open({
                                    type: 1,
                                    title: "<h3 class='ibox-title'>申请退款</h3>",
                                    area: ['680px', '570px'],
                                    content: $('#refund'),
                                    btn: ['保存', '取消'],
                                    yes: function () {
                                        save(obj);
                                    },
                                    cancel: function (index) {
                                        layer.close(index);
                                    }
                                });
                            }



                            function save(Refund) {
                                var obj = new Object;

                                obj.CheckPrice = $("#CheckPrice").val().trim() ? $("#CheckPrice").val().trim() : 0;
                                if ($("#apply2").is(':checked')) {//判断停用按钮是否选中 
                                    obj.StateID = $("#apply2").val().trim();
                                }
                                else {
                                    obj.StateID = $("#apply1").val().trim();

                                }

                                if (obj.StateID == 2) {
                                if (!obj.CheckPrice) {
                                    layer.msg("请输入审核金额！");
                                    return false;
                                }
                            }
                                obj.AuditingRemark = $("#AuditingRemark").val().trim();//赋值必须和数据库字段对应
                                obj.ID = Refund.ID;

                             


                                var action = '@Url.Action("SaveRefund", "Finance")';
                                $.post(action, {
                                    "data": JSON.stringify(obj)//序列化对象
                                }, function (json) {
                                    if (json.status == 200) {//成功

                                        layer.msg(json.msg);//弹出服务器返回的消息
                                        setTimeout(function () {//操作
                                            layer.closeAll();//关闭所有层
                                            window.location.reload(); //刷新
                                        }, 3000);
                                    }
                                }, 'json');
                            }

                          
                            function Audi_Judgment(){

                                var apply;
                                if ($("#apply1").is(':checked')) {//判断停用按钮是否选中 
                                    apply = $("#apply1").val().trim();
                                }
                                else {
                                    apply = $("#apply2").val().trim();

                                }

                                if (apply==2) { //选择审核通过时
                                    $("#CheckPrice_hidden").show();
                                    $("#AuditingRemark_hidden").show();
                                }
                                else {
                                    $("#AuditingRemark").val('');
                                    $("#CheckPrice").val('');
                                    $("#CheckPrice_hidden").hide();
                                    $("#AuditingRemark_hidden").hide();
                                }

                            }
 
 
 
                            $('#apply2').on('ifChecked', function (event) { //ifCreated 事件应该在插件初始化之前绑定 
                                Audi_Judgment();
                            });

                            $('#apply1').on('ifChecked', function (event) { //ifCreated 事件应该在插件初始化之前绑定 
                                Audi_Judgment();
                            });

                     


                            function ExportToExcel() {

                                var btn = $("#Export");//找按钮
                                btn.button("loading");// 替换成loading
                                var Name = $("#Name").val();
                                var BindPhone = $("#BindPhone").val();
                                var timeStart = $("#timeStart").val();
                                var timeEnd = $("#timeEnd").val();

                                window.location = SiteRoot + "Finance/ExportToExcel?Name=" + Name + "&BindPhone=" + BindPhone + "&timeStart=" + timeStart + "&timeEnd=" + timeEnd;
                                alert("正在导出，请耐心等待一段时间，请点击确定继续......")
                                btn.button("reset");//重置初始状态
                            }

 
                        </script>

