@using DataProvider.Models
@using DataProvider.Paging
@{
    ViewBag.Title = "每日结账单";
}
@model DailyReportListViewModel
@section styles{
    <style type="text/css">

    </style>
}
<div class="wrapper wrapper-content  animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins">
                <!-- 数据显示区 -->
                <div class="ibox-content">
                    <!-- 功能操作区 -->
                    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "frmQuery", @class = "form-horizontal form-horizontal" }))
                    {
                        <div class="form-group">
                            <div class="col-sm-2">
                                <label class="control-label">学生姓名：</label>
                            </div>

                            <div class="col-sm-4">
                                 @Html.TextBoxFor(t => t.search.Name, new { @class = "form-control input-sm", @type = "text", @placeholder = "请输入学生姓名" })
                            </div>
                            <label class="col-sm-2 control-label">联系电话：</label>
                            <div class="col-sm-4">
                               @Html.TextBoxFor(t => t.search.BindPhone, new { @class = "form-control input-sm", @type = "text", @placeholder = "请输入联系电话" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-2">
                                <label class="control-label">报名日期:</label>
                            </div>

                  <div class="col-sm-4">
                                <div class="input-daterange input-group" id="datepicker">
                                    @Html.TextBoxFor(t => t.search.timeStart, new { @class = "input-sm form-control", @type = "text", @value = DateTime.Now })

                                    <span class="input-group-addon">到</span>
                                    @*<input type="text" class="input-sm form-control" name="end" value="2014-11-17">*@
                                    @Html.TextBoxFor(t => t.search.timeEnd, new { @class = "input-sm form-control", @type = "text", @value = DateTime.Now })

                                </div>
                            </div>
                        </div>
                        
                        
                        
                        
                        <div class="form-group">

                            <div class="col-sm-12 project-actions">
                                <button type="submit" class="btn btn-w-m btn-primary btn-sm">查&nbsp;&nbsp;&nbsp;&nbsp;询</button>
                                <button type="button" class="btn btn-w-m btn-primary btn-sm">导&nbsp;&nbsp;&nbsp;&nbsp;出</button>
                            </div>
                        </div>
                    }
                    <!-- 数据列表 -->
                    <table class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th>报名日期</th>
                                <th>学员姓名</th>
                                <th>学员电话</th>
                                <th>报名班级</th>
                                <th>班级编号</th>
                                <th>班级课时</th>
                                <th>报名课时</th>
                                <th>班级费用</th>
                                <th>报名费用</th>
                                <th>优惠费用</th>
                            </tr>
                        </thead>
                        <!-- 循环数据 -->
                       <tbody>

                            @if (Model != null && Model.DailyReportlist.Count() > 0)
                            {
                                foreach (var m in Model.DailyReportlist)
                                {
                                <tr>
                                 
                                    <td class="jz">@m.CreateTime</td>
                                    <td>@m.Name</td>
                                    <td>@m.BindPhone</td>
                                    <td>@m.ClassName</td>
                                    <td>@m.ClassID</td>
                                    <td>@m.TotalLesson</td>
                                    <td>@m.ClassHour</td>
                                    <td>@m.Expenses</td>
                                    <td>@m.Paid</td>
                                    <td>@m.ReduceAmount</td>

                                </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="10" style="text-align: center; color: red;">未查询到数据,请更换查询条件试试!</td>
                                </tr>
                            }
                        </tbody>

                    </table>
                    @if (Model != null && Model.DailyReportlist.TotalPageCount > 0)
                    {
                        <div class="row">
                            <div class="dataTables_info col-sm-6">每页显示 @Model.search.PageSize 条，共<span>@Model.DailyReportlist.TotalItemCount</span>条数据</div>
                            <div class="col-sm-6">

                                @Html.Pager(Model.DailyReportlist, new PagerOptions(), "", new RouteValueDictionary {
                                   { "pageindex",  Model.search.CurrentPage },
                                   { "pagesize", ViewBag.PageSize }
                               }, null)
                            </div>

                        </div>
                    }
                </div>
            </div>
        </div>

    </div>
</div>