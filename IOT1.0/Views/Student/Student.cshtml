            function () {
                var file = document.getElementById("uploadFile").value;
                $("#Picurl").val(file);
                document.getElementById("Picurl").value = file;
            }
            );

    }


    //点击恢复，状态变成 未读，按钮名称变成冻结。点击冻结，状态变成冻结，按钮名称变成恢复
    //学员状态ID,字典表3,1,未读，2在读，3冻结，4结束

    function Recovery(ID) {//恢复
        var obj = new Object; 
        obj.ID = ID;
        obj.StateID = 1;
